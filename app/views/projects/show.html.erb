
<p> <%= link_to fa_icon("chevron-left"), projects_path %> </p>
<header>
	<h2> <%= @project.name %></h2>
	<ul class="actions">
		<li><%= link_to "Show Tickets", project_tickets_path(@project),
		class: "show" %></li>
		<% if policy(@project).update? %>
			<li><%= link_to "Edit Project", edit_project_path(@project),
			class: "edit" %></li>
		<% end %>
		<% admins_only do %>
			<li><%= link_to "Delete Project", admin_project_path(@project),
			method: :delete,
			data: { confirm: "Are you sure you want to delete this project?" },
			class: "delete" %></li>
		<% end %>
		<% if policy(Ticket.new(project: @project)).create? %>
			<li><%= link_to "New Ticket", new_project_ticket_path(@project), class: "new" %><li>
		<% end %>
	</ul>
</header>



